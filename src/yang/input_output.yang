// DO NOT MODIFY THIS FILE

module input_output {
  namespace "http://example.com/input_output";
  prefix input_output;

  import tailf-common {
    prefix tailf;
  }
  import tailf-ncs {
    prefix ncs;
  }

  grouping input_output {
  tailf:action audit {
    tailf:actionpoint audit;
    tailf:info "Audit";

    // DO NOT CHANGE THE INPUTS AND OUTPUTS
    input {


      list inputs {
        tailf:info "Input values for the action";

        leaf input_type {
          type enumeration {
            enum "device_group";
            enum "device";
            enum "csv";
          }
        }

        leaf value {
          type string;
        }
      }
    }

    output {
      leaf username {
        type string;
      }
      leaf start_time {
        type string;
        mandatory true;
      }
      leaf end_time {
        type string;
        mandatory true;
      }
      leaf run_time {
        type string;
        mandatory true;
      }
      leaf number_audited {
        type int64;
      }
      
      list results {
        key "device";

        leaf device {
          type string;
        }
        leaf result {
          type boolean;
        }

      }
      leaf success_percent {
        type string;
      }
    }
  }
  // DO NOT CHANGE THE ACTION NAMES OR INPUTS & OUTPUTS
  tailf:action remediate {
    tailf:actionpoint audit;
    tailf:info "Remediation for the use case.";
    input {
      leaf Device_group {
        type string;
        mandatory true;
        tailf:info "NSO Device Group";
      }
    }

    output {
      leaf start_time {
        type string;
        mandatory true;
      }
      leaf end_time {
        type string;
        mandatory true;
      }
      leaf run_time {
        type string;
        mandatory true;
      }
      leaf number_audited {
        type int64;
      }

      list results {
        key device;
        leaf device {
          type string;
        }
        leaf result {
          type string;
        }
      }
      leaf success_percent {
        type string;
      }
    }
   }
 }
}
